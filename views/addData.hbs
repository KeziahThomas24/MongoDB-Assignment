<h1>Add Invoice</h1>
<form method="POST" action="/api/sales">
    <div id="form-group">
        <div>
            <label for="invoiceID">Invoice ID:</label>
            <input class="form-control" name="invoiceID" type="text" id="invoiceID">
        </div>

        <div>
            <label for="branch">Branch:</label>
            <input class="form-control" name="branch" type="text" id="branch">
        </div>   

        <div>
            <label for="city">City:</label>
            <input class="form-control" name="city" type="text" id="city">
        </div>

        <div>
            <label for="customerType">Customer Type:</label>
            <input class="form-control" name="customerType" type="text" id="customerType">
        </div>

        <div>
