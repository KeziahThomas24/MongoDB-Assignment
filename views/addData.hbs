            <input class="form-control" name="productLine" type="text" id="productLine">
        </div>

        <div>
            <label for="name">Name:</label>
            <input class="form-control" name="name" type="text" id="name">
        </div>

        <div>
            <label for="image">Image:</label>
            <input class="form-control" name="image" type="text" id="image">
        </div>

        <div>
            <label for="unitPrice">Unit Price:</label>
            <input class="form-control" name="unitPrice" type="text" id="unitPrice">
        </div>

        <div>
            <label for="quantity">Quanity:</label>
            <input class="form-control" name="quantity" type="text" id="quantity">
        </div>

        <div>
            <label for="tax">Tax:</label>
            <input class="form-control" name="tax" type="text" id="tax">
        </div>

        <div>
            <label for="total">Total:</label>
            <input class="form-control" name="total" type="text" id="total">
        </div>

        <div>
            <label for="date">Date:</label>
            <input class="form-control" name="date" type="text" id="date">
        </div>

        <div>
            <label for="time">Time:</label>
            <input class="form-control" name="time" type="text" id="time">
        </div>

        <div>
            <label for="payment">Payment:</label>
            <input class="form-control" name="payment" type="text" id="payment">
        </div>

        <div>
            <label for="cogs">Cogs:</label>
            <input class="form-control" name="cogs" type="text" id="cogs">
        </div>

        <div>
            <label for="grossIncome">Gross Income:</label>
            <input class="form-control" name="grossIncome" type="text" id="grossIncome">
        </div>

        <div>
            <label for="rating">Rating:</label>
            <input class="form-control" name="rating" type="text" id="rating">
        </div>
    </div>

